
public class DecimalToBinary {
	public static void main(String[] args) {
		System.out.println(decimalToBinary(25));
	}

	public static String decimalToBinaryString(int number) {
		String remainder;
		int quotient;
		if (number / 2 == 0) {
			return "1";
		} else {
			remainder = number % 2 + "";
			quotient = number / 2;
			return remainder + decimalToBinaryString(quotient);
		}
	}

	public static int decimalToBinary(int number) {
		String binary = decimalToBinaryString(number);
		char[] array = binary.toCharArray();
		StringBuilder stringBuilder = new StringBuilder("");
		for (int i = array.length - 1; i <= 0; i--) {
			stringBuilder.append(array[i]);
		}
		return (int) Integer.valueOf(binary);
	}
}
