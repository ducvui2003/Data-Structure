
public class ShapeFomular {
	public static double areaTriangle(double ab, double bc, double height) {
		double base = ab + bc;
		double area = (1 / 2) * base * height;

		return area;
	}

	public static double areaRectangle(int a, int b) {
		return a * b;
	}

	public static double areaTrapezoid(int ab, int cd, int height) {
		double sumOfBases = ab + cd;
		double area = (1 / 2) * sumOfBases * height;
		return area;
	}

	public static double areaParallelogram(int ab, int cd, int height) {
		double base = (ab + cd) * 2;
		double area = base * height;
		return area;
	}

	public static double areaCircle(int radius) {
		double area = Math.PI * (radius * radius);
		return area;
	}
}
