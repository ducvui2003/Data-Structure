package exerceses;

public class Ex15 {

	public static boolean checkPrime(int number) {
		if (number > 1) {
			if (checkPriceNumber(number, number) == 1) {
				return true;
			} else {
				return false;
			}
		} else {
			throw new RuntimeException("1 isn't not a prime number");
		}
	}

	public static int checkPriceNumber(int number, int numberDecrease) {
		numberDecrease--;
		if (number == 1) {
			return 1;
		} else {
			if (number % numberDecrease == 0) {
				return 0 + checkPriceNumber(number, numberDecrease--);
			} else {
				return 1 + checkPriceNumber(number, numberDecrease--);
			}

		}
	}
}
