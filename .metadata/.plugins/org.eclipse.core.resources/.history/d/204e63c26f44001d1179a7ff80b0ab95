package exerceses;

public class Ex13 {
	public static int countOddDigit(int number, int indexCharNumber) {
		if (indexCharNumber == (number + "").length()) {
			if (checkOddNumber(Integer.parseInt((number + "").charAt(indexCharNumber)))) {
				return 1;
			} else {
				return false;
			}
		}
	}

	public static boolean checkOddNumber(int number) {
		if (number % 2 != 0) {
			return true;
		} else {
			return false;
		}
	}
}
