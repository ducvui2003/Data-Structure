package exerceses;

public class Ex1 {
	public static void main(String[] args) {
		System.out.println(decimalToDecimalNotReverse(45));
		System.out.println(decimalToDecimalRecursive(45));
	}

	public static int decimalToDecimalRecursive(int decimal) {
		StringBuilder stringBinary = new StringBuilder(decimalToDecimalNotReverse(decimal)).reverse();
		return Integer.parseInt(stringBinary.toString());
	}

	public static String decimalToDecimalNotReverse(int decimal) {
		String stringBinary = "";
		if (decimal / 2 == 0) {
			return "1";
		} else {
			stringBinary += (decimal % 2);
			return stringBinary + decimalToDecimalNotReverse(decimal / 2);
		}
	}
}
