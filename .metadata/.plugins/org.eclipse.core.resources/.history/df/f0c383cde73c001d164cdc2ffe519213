package exerceses;

public class Ex1 {
	public static void main(String[] args) {
		System.out.println(decimalToDecimal(10));
	}

	public static String decimalToDecimal(int decimal) {
		String stringBinary = "";
		if (decimal % 2 == 0) {
			return "1";
		} else {
			stringBinary += (decimal % 2);
			return stringBinary + decimalToDecimal(decimal / 2);
		}
	}
}
