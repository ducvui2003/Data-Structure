
package exerceses;

public class Ex8 {
	public static int sumOddNumberOfInteger(int number) {
		if (number > 0) {
			char[] stringNumberOfInt = (number + "").toCharArray();
			return sumOddNumber(stringNumberOfInt, stringNumberOfInt.length);
		} else {
			throw new RuntimeException("Error");
		}
	}

	public static int sumOddNumber(char[] arrayNumber, int lengthOfArray) {
		lengthOfArray--;
		if (lengthOfArray == 0) {
			if (checkEvenNumber(arrayNumber[lengthOfArray])) {
				return arrayNumber[lengthOfArray];
			} else {
				return 0;
			}
		} else {
			if (checkEvenNumber(arrayNumber[lengthOfArray])) {
				return arrayNumber[lengthOfArray] + sumOddNumber(arrayNumber, lengthOfArray);
			} else {
				return 0 + sumOddNumber(arrayNumber, lengthOfArray);
			}
		}
	}

	public static boolean checkEvenNumber(int number) {
		return number % 2 == 0;
	}
}
