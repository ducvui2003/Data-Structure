	public static String decimalToBinary(String binary) {
		StringBuilder s = new StringBuilder(binary);
		return s.reverse().toString();
	}

	public static String decimalToBinaryNotReverse(int decimal) {
		String s = "";
		if (decimal / 2 == 1) {
			return "1";
		} else {
			s = s + (decimal % 2);
			return s + decimalToBinaryNotReverse(decimal / 2);
		}
	}
}
