package exerceses;

public class Ex11 {
	public static void main(String[] args) {
		System.out.println("Greatest Digit of \"902129\": " + findGreatestDigitInNumber(902129));
	}

	public static int findGreatestDigitInNumber(int number) {
		char[] numberArrayChar = (number + "").toCharArray();
		int[] numberArrayInt = new int[numberArrayChar.length];
		for (int i = 0; i < numberArrayInt.length; i++) {
			numberArrayInt[i] = Integer.parseInt(numberArrayChar[i] + "");
		}
		return findMaxNumberInArray(numberArrayInt, numberArrayInt.length);
	}

	public static int findMaxNumberInArray(int[] numberArray, int lengthOfArray) {
		lengthOfArray--;
		if (lengthOfArray == 1) {
			return Math.max(lengthOfArray, 0);
		} else {
			int maxNumber = Math.max(lengthOfArray, findMaxNumberInArray(numberArray, lengthOfArray - 1));
			return maxNumber;
		}
	}
}
