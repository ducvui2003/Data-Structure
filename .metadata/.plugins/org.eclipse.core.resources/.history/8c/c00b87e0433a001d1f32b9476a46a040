import java.util.Random;

public class FormularUtil {
	public static void main(String[] args) {
		System.out.println(areaTriangle(10., 16.4, 17.7));
		System.out.println(areaTriangle(4, 2, 1));
		System.out.println(capchaCreate(5));
	}

	public static double areaTriangle(double a, double b, double c) {
		double area;
		if (a < b + c && b < a + c && c < a + b) {
			System.out.println("It's triangle");
			double p = (a + b + c) / 2 + (a + b + c) % 2;
			area = Math.sqrt(p * (p - a) * (p - b) * (p - c));
		} else {
			throw new RuntimeException("It's not triangle");
		}
		return area;
	}

	public static String capchaCreate(int length) {
		String capcha = "";

		if (length >= 4 && length <= 8) {
			for (int i = 0; i < length; i++) {
				for (int j = 0; j < length; j++) {
					int rd = randomBetween(1, 3);
					switch (rd) {
					case 1: {
						int rdChar = randomBetween(1, 26);
						capcha = capcha + (char) ('A' + rdChar);
						break;
					}
					case 2: {
						int rdChar = randomBetween(1, 26);
						capcha = capcha + (char) ('a' + rdChar);
						break;
					}
					case 3: {
						int rdChar = randomBetween(0, 9);
						capcha = capcha + (char) ('A' + rdChar);
						break;
					}
					}
				}
			}
		} else {
			throw new RuntimeException("Error");
		}
		return capcha;
	}

	public static int randomBetween(int min, int max) {
		int hieu = max - min;
		Random rd = new Random();
		return rd.nextInt(hieu + 1) + min;
	}

}
